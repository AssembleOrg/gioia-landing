---
import { Search, Package, Truck, MapPin, CheckCircle } from 'lucide-astro';
---

<section id="rastreo" class="py-20 md:py-28 bg-gradient-to-b from-gray-50 to-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16 animate-fade-in-up">
      <h2 class="text-4xl md:text-5xl font-bold text-dark-800 mb-4">
        Rastrea tu <span class="text-primary-500">Pedido</span>
      </h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Ingresa el número de seguimiento para conocer el estado actual de tu envío en tiempo real
      </p>
      <div class="w-24 h-1 bg-gradient-to-r from-primary-400 to-primary-600 mx-auto mt-6 rounded-full"></div>
    </div>

    <!-- Tracking Form -->
    <div class="max-w-4xl mx-auto mb-16">
      <div class="bg-white rounded-2xl shadow-2xl p-8 md:p-12">
        <form id="tracking-form" class="space-y-6">
          <div class="relative">
            <label for="tracking-number" class="block text-sm font-semibold text-gray-700 mb-2">
              Número de Seguimiento
            </label>
            <div class="relative">
              <input
                type="text"
                id="tracking-number"
                name="tracking-number"
                placeholder="Ej: GIO-2025-001234"
                class="w-full px-6 py-4 pr-14 border-2 border-gray-300 rounded-xl focus:ring-4 focus:ring-primary-200 focus:border-primary-500 transition-all duration-300 text-lg"
                required
              />
              <div class="absolute right-4 top-1/2 transform -translate-y-1/2 text-gray-400">
                <Package size={24} />
              </div>
            </div>
          </div>
          
          <button
            type="submit"
            class="w-full bg-gradient-to-r from-primary-500 to-primary-600 hover:from-primary-600 hover:to-primary-700 text-white px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-300 transform hover:scale-[1.02] shadow-lg hover:shadow-xl flex items-center justify-center space-x-2"
          >
            <Search size={24} />
            <span>Rastrear Pedido</span>
          </button>
        </form>

        <!-- Tracking Result (Hidden by default) -->
        <div id="tracking-result" class="hidden mt-8 space-y-6">
          <div class="border-t-2 border-gray-200 pt-6">
            <h3 class="text-xl font-bold text-dark-800 mb-4">Estado del Envío</h3>
            
            <!-- Order Info -->
            <div class="bg-gray-50 rounded-xl p-6 mb-6">
              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <p class="text-sm text-gray-600 mb-1">Número de Seguimiento</p>
                  <p id="result-tracking-number" class="font-semibold text-dark-800">-</p>
                </div>
                <div>
                  <p class="text-sm text-gray-600 mb-1">Estado Actual</p>
                  <p id="result-status" class="font-semibold text-primary-600">-</p>
                </div>
              </div>
            </div>

            <!-- Timeline -->
            <div class="space-y-4">
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0 mt-1">
                  <div class="w-10 h-10 bg-primary-500 rounded-full flex items-center justify-center">
                    <CheckCircle size={20} class="text-white" />
                  </div>
                </div>
                <div class="flex-1">
                  <p class="font-semibold text-dark-800">Pedido Recibido</p>
                  <p class="text-sm text-gray-600">Tu pedido ha sido registrado en nuestro sistema</p>
                  <p class="text-xs text-gray-500 mt-1">28/10/2025 - 10:30 AM</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0 mt-1">
                  <div class="w-10 h-10 bg-primary-500 rounded-full flex items-center justify-center">
                    <Package size={20} class="text-white" />
                  </div>
                </div>
                <div class="flex-1">
                  <p class="font-semibold text-dark-800">En Preparación</p>
                  <p class="text-sm text-gray-600">Tu pedido está siendo preparado para el envío</p>
                  <p class="text-xs text-gray-500 mt-1">28/10/2025 - 14:20 PM</p>
                </div>
              </div>

              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0 mt-1">
                  <div class="w-10 h-10 bg-primary-500 rounded-full flex items-center justify-center">
                    <Truck size={20} class="text-white" />
                  </div>
                </div>
                <div class="flex-1">
                  <p class="font-semibold text-dark-800">En Tránsito</p>
                  <p class="text-sm text-gray-600">Tu pedido está en camino al destino</p>
                  <p class="text-xs text-gray-500 mt-1">29/10/2025 - 08:15 AM</p>
                </div>
              </div>

              <div class="flex items-start space-x-4 opacity-40">
                <div class="flex-shrink-0 mt-1">
                  <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center">
                    <MapPin size={20} class="text-white" />
                  </div>
                </div>
                <div class="flex-1">
                  <p class="font-semibold text-dark-800">Entregado</p>
                  <p class="text-sm text-gray-600">Tu pedido ha sido entregado</p>
                  <p class="text-xs text-gray-500 mt-1">Pendiente</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Info Cards -->
    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      <div class="bg-white rounded-xl shadow-lg p-6 text-center transform hover:scale-105 transition-transform duration-300">
        <div class="bg-primary-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
          <Package size={32} class="text-primary-600" />
        </div>
        <h3 class="font-bold text-dark-800 mb-2">Seguimiento 24/7</h3>
        <p class="text-sm text-gray-600">Rastrea tu pedido en cualquier momento, desde cualquier lugar</p>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-6 text-center transform hover:scale-105 transition-transform duration-300">
        <div class="bg-primary-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
          <Truck size={32} class="text-primary-600" />
        </div>
        <h3 class="font-bold text-dark-800 mb-2">Actualizaciones en Tiempo Real</h3>
        <p class="text-sm text-gray-600">Recibe notificaciones sobre el estado de tu envío</p>
      </div>

      <div class="bg-white rounded-xl shadow-lg p-6 text-center transform hover:scale-105 transition-transform duration-300">
        <div class="bg-primary-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
          <MapPin size={32} class="text-primary-600" />
        </div>
        <h3 class="font-bold text-dark-800 mb-2">Ubicación Precisa</h3>
        <p class="text-sm text-gray-600">Conoce exactamente dónde se encuentra tu pedido</p>
      </div>
    </div>
  </div>
</section>

<script>
  const trackingForm = document.getElementById('tracking-form');
  const trackingResult = document.getElementById('tracking-result');
  const resultTrackingNumber = document.getElementById('result-tracking-number');
  const resultStatus = document.getElementById('result-status');
  const trackingNumberInput = document.getElementById('tracking-number') as HTMLInputElement;

  if (trackingForm) {
    trackingForm.addEventListener('submit', (e) => {
      e.preventDefault();
      
      const trackingNumber = trackingNumberInput?.value;
      
      if (trackingNumber && trackingResult && resultTrackingNumber && resultStatus) {
        // Simulate API call
        resultTrackingNumber.textContent = trackingNumber;
        resultStatus.textContent = 'En Tránsito';
        
        // Show result with animation
        trackingResult.classList.remove('hidden');
        trackingResult.classList.add('animate-fade-in-up');
        
        // Scroll to result
        setTimeout(() => {
          trackingResult.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }, 100);
      }
    });
  }
</script>

